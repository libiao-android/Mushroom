<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:layout_width="250dp"
    android:paddingLeft="20dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:id="@+id/setting_view_time"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <CheckBox
            android:checked="true"
            android:paddingLeft="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:id="@+id/dialog_cb_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"/>
        <EditText
            android:gravity="center"
            android:id="@+id/setting_et_time"
            android:textColor="@color/colorAccent"
            android:background="@null"
            android:inputType="numberSigned"
            android:textSize="12dp"
            android:text="2"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/blank"
            android:text="到"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:gravity="center"
            android:id="@+id/setting_et_time2"
            android:textColor="@color/colorAccent"
            android:background="@null"
            android:inputType="numberSigned"
            android:textSize="12dp"
            android:text="99"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/blank"
            android:text="天"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/setting_view_time"
        android:id="@+id/setting_view_rang_left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <CheckBox
            android:paddingLeft="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:id="@+id/dialog_cb_rang_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="涨幅大于等于"/>
        <EditText
            android:id="@+id/setting_et_rang_left"
            android:textColor="@color/colorAccent"
            android:background="@null"
            android:inputType="numberSigned"
            android:textSize="12dp"
            android:text="0"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/blank"
            android:text="%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/setting_view_rang_left"
        android:id="@+id/setting_view_rang_right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <CheckBox
            android:paddingLeft="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:id="@+id/dialog_cb_rang_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="涨幅小于等于"/>
        <EditText
            android:id="@+id/setting_et_rang_right"
            android:textColor="@color/colorAccent"
            android:background="@null"
            android:inputType="numberSigned"
            android:textSize="12dp"
            android:text="5"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/blank"
            android:text="%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/setting_view_rang_right"
        android:id="@+id/setting_view_liang_left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <CheckBox
            android:paddingLeft="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:id="@+id/dialog_cb_liang_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="量能大于等于"/>
        <EditText
            android:id="@+id/setting_et_liang_left"
            android:textColor="@color/colorAccent"
            android:background="@null"
            android:inputType="numberSigned"
            android:textSize="12dp"
            android:text="1"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/blank"
            android:text="亿"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/setting_view_liang_left"
        android:id="@+id/setting_view_liang_right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <CheckBox
            android:paddingLeft="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:id="@+id/dialog_cb_liang_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="量能小于等于"/>
        <EditText
            android:id="@+id/setting_et_liang_right"
            android:textColor="@color/colorAccent"
            android:background="@null"
            android:inputType="numberSigned"
            android:textSize="12dp"
            android:text="1"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/blank"
            android:text="亿"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/setting_view_liang_right"
        android:id="@+id/setting_view_max_rang"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <CheckBox
            android:paddingLeft="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:id="@+id/dialog_cb_max_rang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下引线大于"/>
        <EditText
            android:id="@+id/setting_et_max_rang"
            android:textColor="@color/colorAccent"
            android:background="@null"
            android:inputType="numberSigned"
            android:textSize="12dp"
            android:text="3"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/blank"
            android:text="%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/setting_view_max_rang"
        android:id="@+id/setting_view_line"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <CheckBox
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:id="@+id/dialog_cb_you_xuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优选"/>

        <CheckBox
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:id="@+id/dialog_cb_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连阴"/>

        <CheckBox
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:id="@+id/dialog_cb_zhi_die"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="放量"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/setting_view_line"
        android:id="@+id/setting_view_line_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <CheckBox
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:id="@+id/dialog_cb_line_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="断层"/>

        <CheckBox
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:id="@+id/dialog_cb_xin_gao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新高"/>

        <CheckBox
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:id="@+id/dialog_cb_max_liang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="max量"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/setting_view_line_2"
        android:id="@+id/setting_view_line_3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <CheckBox
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:id="@+id/dialog_cb_you_xuan_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优一"/>

        <CheckBox
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:id="@+id/dialog_cb_you_xuan_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优二"/>

        <CheckBox
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:id="@+id/dialog_cb_you_xuan_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优三"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/record_layout"
        android:layout_below="@+id/setting_view_line_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/record_you_two"
            android:text="记录优一"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>

        <Button
            android:id="@+id/record_max_liang"
            android:text="记录max量"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/record_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/setting_btn_cancel"
            android:textSize="12dp"
            android:layout_marginLeft="35dp"
            android:layout_centerVertical="true"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <Button
            android:id="@+id/setting_btn_sure"
            android:textSize="12dp"
            android:layout_marginRight="55dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
    </RelativeLayout>

</RelativeLayout>